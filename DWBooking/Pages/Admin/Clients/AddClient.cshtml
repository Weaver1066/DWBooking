@page
@using DWBooking.Model
@model DWBooking.Pages.Admin.Clients.AddClientModel
@{
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-5">
            <h4 class="page-title" style="text-align: left;">Book Vejledning</h4>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="#">Home</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Book Vejledning</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-body">
                <form class="form-horizontal mt-4">
                    <div class="form-group">
                        <div class="row">
                            <label>Søg<span class="help"></span></label>
                            <div class="col-lg-11">
                                <input type="text" class="form-control" value="">
                            </div>
                            <div class="col-lg-1">
                                <button class="btn btn-primary form-control">Søg</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-body">
                <form method="post" class="form-horizontal mt-4">
                    <div class="form-group">
                        <label class="text-left">Navn<span class="help"></span></label>
                        <input asp-for="Client.Name" type="text" class="form-control" placeholder="George deo...">
                        <span asp-validation-for="Client.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="text-left">Email<span class="help"></span></label>
                        <input asp-for="Client.Email" type="text" class="form-control" placeholder="Email">
                        <span asp-validation-for="Client.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="text-left">Telefon<span class="help"></span></label>
                        <input asp-for="Client.Phone" type="text" class="form-control" placeholder="Telefon">
                        <span asp-validation-for="Client.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="text-left">Dato<span class="help"></span></label>
                        <input asp-for="Counceling.Date" type="date" value="dd-mm-yyyy" class="form-control" placeholder="">
                        <span asp-validation-for="Counceling.Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Tid<span class="help"></span></label>
                        <input asp-for="Counceling.Date" type="time" class="form-control">
                        <span asp-validation-for="Counceling.Date" class="text-danger"></span>
                    </div>
                    <select asp-for="Employee.EmployeeID" class="form-select" aria-label="Default select example">
                        <option selected>Vælg Rådgiver</option>
                      @foreach (Model.Employee employee in Model.Employees)
                      {
                          <option value="@employee.EmployeeID">@employee.Name</option>
                      }
                    </select>
              
                
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary form-control">Opret</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

