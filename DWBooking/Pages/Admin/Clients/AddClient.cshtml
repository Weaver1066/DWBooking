@page
@using DWBooking.Model
@model DWBooking.Pages.Admin.Clients.AddClientModel
@{
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-5">
            <h4 class="page-title" style="text-align: left;">Book Vejledning</h4>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="#">Home</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Book Vejledning</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-body">
                <form method="post" class="form-horizontal mt-4">
                    <div class="form-group">
                        <div class="row">
                            <label>Søg<span class="help"></span></label>
                            <div class="col-lg-11">
                                <input asp-for="@Model.SearchString" type="text" class="form-control">
                            </div>
                            <div class="col-lg-1">
                                <input type="submit" asp-page-handler="NameSearch" class="btn btn-primary form-control" value="søg"/>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-body">
                <form method="post" class="form-horizontal mt-4">
                    <div class="form-group">
                        <label class="text-left">Navn<span class="help"></span></label>
                        <input asp-for="Client.Name" type="text" class="form-control" placeholder="Navn">
                        <span asp-validation-for="Client.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="text-left">Email<span class="help"></span></label>
                        <input asp-for="Client.Email" type="email" class="form-control" placeholder="Email">
                        <span asp-validation-for="Client.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="text-left">Telefon<span class="help"></span></label>
                        <input asp-for="Client.Phone" type="number" class="form-control" placeholder="Telefon">
                        <span asp-validation-for="Client.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="text-left">Dato<span class="help"></span></label>
                        <input asp-for="@Model.Date" type="date" class="form-control">
                        <span asp-validation-for="Counceling.Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Tid<span class="help"></span></label>
                        <input asp-for="@Model.Time" type="time" name="time" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Rådgiver<span class="help"></span></label>
                        <select asp-for="Employee.EmployeeID" name="SelectedEmployee" class="form-select" aria-label="Default select example">
                            <option value="0" selected disabled hidden>Vælg Rådgiver</option>
                            @foreach (Model.Employee employee in Model.Employees)
                            {
                                <option value="@employee.EmployeeID">@employee.Name</option>
                            }
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" asp-page-handler="CreateCounceling" class="btn btn-primary form-control">Opret</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

