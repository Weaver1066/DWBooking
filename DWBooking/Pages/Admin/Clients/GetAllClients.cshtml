@page
@model DWBooking.Pages.Admin.Clients.GetAllClientsModel
@{
}
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-5">
            <h4 class="page-title" style="text-align: left;">Klient oversigt</h4>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a style="color: black;" asp-page="/Admin/Counceling/GetAllCounceling">Home</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">klient oversigt</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-body">
                <form method="post" class="form-horizontal mt-4">
                    <div class="form-group">
                        <div class="row">
                            <label>Søg<span class="help"></span></label>
                            <div class="col-lg-11">
                                <input type="text" asp-for="@Model.SearchString"class="form-control" value="">
                            </div>
                            <div class="col-lg-1">
                                <button asp-page-handler="SearchName" class="btn btn-primary form-control">Søg</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <div class="card card-body">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Navn</th>
                    <th scope="col">Telefon</th>
                    <th scope="col">Email</th>
                    <th scope="col">Funktion</th>
                </tr>
                </thead>
                <tbody>
                @if (@Model.Clients != null)
                {
                    foreach (var client in Model.Clients)
                    {
                        <tr>
                            <td>@client.Name</td>
                            <td>@client.Phone</td>
                            <td>@client.Email</td>
                            <td><a asp-route-id="@client.ClientID" asp-page="GetCouncelingByClient">Se log</a></td>
                            <td><a style="color: black;" asp-route-id="@client.ClientID" asp-page="UpdateClient">Ret Infomation</a></td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
