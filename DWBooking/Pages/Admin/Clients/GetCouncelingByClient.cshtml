@page
@model DWBooking.Pages.Admin.Clients.GetCouncelingByClientModel
@{
}
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-5">
            <h4 class="page-title" style="text-align: left;">Samtale oversigt - @Model.Client.Name</h4>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="#">Home</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Samtale oversigt</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
<div class="row">
    <div class="col-lg-12">
        <div class="card card-body">
            <form  method="post" class="form-horizontal mt-4">
                <div class="form-group">
                    <div class="row">
                        <label>Søg<span class="help"></span></label>
                        <div class="col-lg-11">
                            <input type="date" asp-for="@Model.Date" class="form-control" value="">
                        </div>
                        <div class="col-lg-1">
                            <button type="submit" asp-page-handler="DateSearch" class="btn btn-primary form-control">Søg</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="table-responsive">
    <div class="card card-body">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Navn</th>
                <th scope="col">Rådgiver</th>
                <th scope="col">Dato</th>
                <th scope="col">Note</th>
            </tr>
            </thead>
            <tbody>
            @if (@Model.Councelings != null)
            {
                foreach (var counceling in Model.Councelings)
                {
                    <tr>
                        <td>@counceling.Client.Name</td>
                        <td>@counceling.Employee.Name</td>
                        <td>@counceling.Date</td>
                        <td><a asp-route-id="@counceling.CouncelingID" asp-page="Notes">Rediger note</a></td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>
</div>