@page
@model DWBooking.Pages.Admin.Clients.UpdateClientModel
@{
}
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-5">
            <h4 class="page-title" style="text-align: left;">Ret klient info</h4>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="#">Home</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Ret klient Info</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-body">
                <form method="post" class="form-horizontal mt-4">
                    <div class="form-group">
                        <label class="form-label">Navn<span class="help"></span></label>
                        <input type="text" asp-for="@Model.Client.Name" class="form-control">
                        <span asp-validation-for="Client.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Email<span class="help"></span></label>
                        <input type="email" asp-for="@Model.Client.Email" asp class="form-control">
                        <span asp-validation-for="Client.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Tlf<span class="help"></span></label>
                        <input type="text" asp-for="@Model.Client.Phone" class="form-control">
                        <span asp-validation-for="Client.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" asp-route-id="@Model.Client.ClientID" class="btn btn-primary form-control">Ret</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
