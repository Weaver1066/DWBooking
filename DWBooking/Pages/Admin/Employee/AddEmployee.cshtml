@page
@model DWBooking.Pages.Admin.Employee.AddEmployeeModel
@{
}
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-5">
            <h4 class="page-title" style="text-align: left;">Opret Medlem</h4>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="#">Home</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Opret Medlem</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-body">
                <form method="post">
                        <div class="form-group">
                            <label asp-for="Employee.Name">Navn<span class="help"></span></label>
                            <input asp-for="Employee.Name" type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Employee.Phone">Telefon<span class="help"></span></label>
                            <input asp-for="Employee.Phone" type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Employee.Email">Email<span class="help"></span></label>
                            <input asp-for="Employee.Email" type="email" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Employee.Age">Fødselsdato<span class="help"></span></label>
                            <input asp-for="Employee.Age" type="text" class="form-control" value="01/12/2000">
                        </div>
                        <div class="form-group">
                            <label asp-for="Employee.Address">Adresse<span class="help"></span></label>
                            <input asp-for="Employee.Address" type="text" class="form-control">
                        </div>
                    <div class="form-group">
                        <select asp-for="Employee.Role" class="form-select" aria-label="Default select example">
                            <option selected>Vælg Stilling</option>
                            <option value="1">Admin</option>
                            <option value="2">Rådgiver</option>
                            <option value="3">Frivilig</option>
                        </select>
                    </div>
                        <div class="form-group">
                            <input type="submit" value="Opret" class="btn btn-primary form-control"/>
                        </div>
                    </form>
            </div>
        </div>
    </div>
</div>