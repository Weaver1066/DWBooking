@page
@using DWBooking.Model
@model DWBooking.Pages.Admin.Events.GetAllEventsModel
@{
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-5">
            <h4 class="page-title" style="text-align: left;">Event oversigt</h4>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a style="color: black;" asp-page="/Admin/Counceling/GetAllCounceling">Home</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Event oversigt</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <div class="card card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Dato</th>
                                <th scope="col">Tidspunkt</th>
                                <th scope="col">Titel</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody id="event-table">
                            @if (@Model.Events != null)
                            {
                                foreach (var e in Model.Events)
                                {
                                    if (e.Date.Date > DateTime.Now)
                                    {
                                        <tr>
                                            <td><a style="color: black;" asp-route-id="@e.EventID" asp-page="GetParticipantsByEvent">@e.Date.Date.ToString("dddd, dd MMMM yyyy")</a></td>
                                            <td><a style="color: black;" asp-route-id="@e.EventID" asp-page="GetParticipantsByEvent">@e.Date.ToString("HH:mm")</a></td>
                                            <td><a style="color: black;" asp-route-id="@e.EventID" asp-page="GetParticipantsByEvent">@e.Name</a></td>
                                            <td><a style="color: black;" asp-route-id="@e.EventID" asp-page="UpdateEvent">Ret Event</a></td>
                                            <td><a style="color: red;" asp-route-id="@e.EventID" asp-page="DeleteEvent">Slet event</a></td>
                                        </tr>
                                    }
                                    else if (e.Date.ToString("MM/dd/yyyy") == DateTime.Now.ToString("MM/dd/yyyy"))
                                    {
                                        <tr class="table-success" style="font-weight: bold;">
                                            <td><a style="color: black;" asp-route-id="@e.EventID" asp-page="GetParticipantsByEvent">@e.Date.Date.ToString("dddd, dd MMMM yyyy")</a></td>
                                            <td><a style="color: black;" asp-route-id="@e.EventID" asp-page="GetParticipantsByEvent">@e.Date.ToString("HH:mm")</a></td>
                                            <td><a style="color: black;" asp-route-id="@e.EventID" asp-page="GetParticipantsByEvent">@e.Name</a></td>
                                            <td><a style="font-weight: normal" asp-route-id="@e.EventID" asp-page="UpdateEvent">Ret Event</a></td>
                                            <td><a style="color: red; font-weight: normal" asp-route-id="@e.EventID" asp-page="DeleteEvent">Slet event</a></td>
                                        </tr>
                                    }
                                    else if (e.Date < DateTime.Now)
                                    {
                                        <tr class="table-secondary" style="opacity: 0.6;">
                                            <td><a style="color: black;" asp-route-id="@e.EventID" asp-page="GetParticipantsByEvent">@e.Date.Date.ToString("dddd, dd MMMM yyyy")</a></td>
                                            <td><a style="color: black;" asp-route-id="@e.EventID" asp-page="GetParticipantsByEvent">@e.Date.ToString("HH:mm")</a></td>
                                            <td><a style="color: black;" asp-route-id="@e.EventID" asp-page="GetParticipantsByEvent">@e.Name</a></td>
                                            <td><a style="color: black;" asp-route-id="@e.EventID" asp-page="UpdateEvent">Ret Event</a></td>
                                            <td><a style="color: red;" asp-route-id="@e.EventID" asp-page="DeleteEvent">Slet event</a></td>
                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
