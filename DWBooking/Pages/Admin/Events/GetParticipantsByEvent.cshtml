@page
@model DWBooking.Pages.Admin.Events.GetParticipantsByEventModel
@{
}

<div class="text-center">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-5">
                <h4 class="page-title" style="text-align: left;">Event</h4>
            </div>
            <div class="col-7 align-self-center">
                <div class="d-flex align-items-center justify-content-end">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="#">Home</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Event</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <div class="card card-body">
            <h2>@Model.Event.Name - @Model.Event.Date.ToShortDateString()</h2>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Navn</th>
                    <th scope="col">Telefon</th>
                    <th scope="col">Email</th>
                    <th scope="col">Antal deltagere: @Model.Participants.Count</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var participant in Model.Participants)
                {
                    <tr>
                        <th scope="row">@participant.Name</th>
                        <td>@participant.Phone</td>
                        <td>@participant.Email</td>
                        <td></td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>