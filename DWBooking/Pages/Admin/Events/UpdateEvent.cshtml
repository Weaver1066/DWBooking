@page
@model DWBooking.Pages.Admin.Events.UpdateEventModel
@{
}


<div class="page-breadcrumb">
    <div class="row">
        <div class="col-5">
            <h4 class="page-title" style="text-align: left;">Ret event</h4>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a style="color: black;" asp-page="/Admin/Counceling/GetAllCounceling">Home</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Ret event</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-body">
                <form method="post" class="form-horizontal mt-4">
                    <div class="form-group">
                        <label class="form-label">Dato<span class="help"></span></label>
                        <input type="date" asp-for="@Model.Date" class="form-control">
                        <span asp-validation-for="Event.Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Tidspunkt<span class="help"></span></label>
                        <input type="time" asp-for="@Model.Time" asp class="form-control">
                        <span asp-validation-for="Event.Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="text-left">Title<span class="help"></span></label>
                        <input type="text" asp-for="@Model.Event.Name" class="form-control" >
                        <span asp-validation-for="Event.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Type<span class="help"></span></label>
                        <input type="text" asp-for="@Model.Event.Type" class="form-control" >
                        <span asp-validation-for="Event.Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Beskrivelse<span class="help"></span></label>
                        <textarea class="form-control" style="height: 320px;" asp-for="@Model.Event.Description"></textarea>
                        <span asp-validation-for="Event.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary form-control">Ret</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>