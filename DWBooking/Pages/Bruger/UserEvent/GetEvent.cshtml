@page
@model DWBooking.Pages.Bruger.UserEvent.GetEventModel
@{
}
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-5">
            <h4 class="page-title" style="text-align: left;">Event oversigt</h4>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a style="color: black;" asp-page="/Bruger/UserEvent/GetEvent">Home</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Event oversigt</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        @if (@Model.Events != null)
        {
            foreach (var e in Model.Events)
            {
                if(e.Date.ToString("MM/dd/yyyy") == DateTime.Now.ToString("MM/dd/yyyy") || e.Date > DateTime.Now)
                {
                    <a class="col-lg-4" style="color: black" type="btn" asp-page="AddParticipant" asp-route-id="@e.EventID">
                        <div class=" card card-body col-lg-12" style="overflow: hidden; height: 500px;">
                            <img src="../../assets/images/Eventplaceholder.jpg" style="width: 100%; height:auto;" alt="homepage" class="light-logo" />
                            <h4>@e.Name</h4>
                            <bold>@e.Date.Date.ToShortDateString() - @e.Date.TimeOfDay</bold>
                            <p>@e.Description</p>
                        </div>
                    </a>
                }
            }
        }
    </div>
</div>
